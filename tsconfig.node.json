{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ESNext", // Changed for better compatibility with Vite 7
    "lib": ["ESNext"],
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    
    // CHANGE THIS: Set to false or remove it to allow standard imports
    "verbatimModuleSyntax": false, 
    
    // ADD THIS: Essential for React 19 / Vite plugins
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // Set to false temporarily to stop build crashes
    "noUnusedParameters": false, // Set to false temporarily
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}